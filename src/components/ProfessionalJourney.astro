<section
	data-testid="professional-journey"
	id="journey"
	class="mb-10 flex flex-col items-center justify-center lg:mb-0 lg:min-h-screen"
>
	<div class="mb-10 flex w-full flex-col items-center justify-center">
		<h2 class="font-monospace text-2xl text-orange lg:text-4xl">Professional Journey</h2>
		<span class="mb-6 ml-2 h-1 w-10 bg-orange"></span>
	</div>

	<div class="w-full max-w-4xl">
		<!-- Career Timeline -->
		<div class="mb-12 flex flex-col lg:flex-row items-center justify-center">
			<div class="flex flex-col lg:flex-row items-center space-y-4 lg:space-y-0 lg:space-x-8 text-center">
				<div class="flex flex-col items-center">
					<div class="bg-orange text-white px-3 py-1 rounded-full text-sm font-bold">2024-Present</div>
					<div class="mt-2 text-sm font-semibold text-black dark:text-white">Lloyds Technology Center</div>
					<div class="text-xs text-gray-600 dark:text-gray-400">Senior Software Engineer</div>
				</div>
				<div class="hidden lg:block text-orange">→</div>
				<div class="flex flex-col items-center">
					<div class="bg-gray-600 text-white px-3 py-1 rounded-full text-sm font-bold">2022-2024</div>
					<div class="mt-2 text-sm font-semibold text-black dark:text-white">DBS Bank</div>
					<div class="text-xs text-gray-600 dark:text-gray-400">Associate</div>
				</div>
				<div class="hidden lg:block text-orange">→</div>
				<div class="flex flex-col items-center">
					<div class="bg-gray-600 text-white px-3 py-1 rounded-full text-sm font-bold">2020-2022</div>
					<div class="mt-2 text-sm font-semibold text-black dark:text-white">Arcserve</div>
					<div class="text-xs text-gray-600 dark:text-gray-400">Software Engineer</div>
				</div>
				<div class="hidden lg:block text-orange">→</div>
				<div class="flex flex-col items-center">
					<div class="bg-gray-600 text-white px-3 py-1 rounded-full text-sm font-bold">2019-2020</div>
					<div class="mt-2 text-sm font-semibold text-black dark:text-white">Fission Infotech</div>
					<div class="text-xs text-gray-600 dark:text-gray-400">Associate Software Engineer</div>
				</div>
			</div>
		</div>

		<!-- Current Focus -->
		<div class="mb-12 text-center">
			<h3 class="mb-4 text-xl font-semibold text-black dark:text-white">Current Focus</h3>
			<div class="flex flex-wrap justify-center gap-3 mb-6">
				<span class="bg-orange text-white px-3 py-1 rounded-full text-sm">International Payment Modernization</span>
				<span class="bg-orange text-white px-3 py-1 rounded-full text-sm">Open Banking v4</span>
				<span class="bg-orange text-white px-3 py-1 rounded-full text-sm">MCP & AI Exploration</span>
				<span class="bg-orange text-white px-3 py-1 rounded-full text-sm">Data Science</span>
			</div>
		</div>

		<!-- Key Achievements -->
		<div class="grid md:grid-cols-3 gap-6 text-center">
			<div class="p-6 rounded-lg border border-gray-200 dark:border-gray-700">
				<div class="text-2xl font-bold text-orange mb-2">30%</div>
				<div class="text-sm text-gray-600 dark:text-gray-400">Performance Improvement</div>
				<div class="text-xs mt-1 text-gray-500 dark:text-gray-500">Load time reduction at DBS</div>
			</div>
			<div class="p-6 rounded-lg border border-gray-200 dark:border-gray-700">
				<div class="text-2xl font-bold text-orange mb-2">80%</div>
				<div class="text-sm text-gray-600 dark:text-gray-400">Test Coverage</div>
				<div class="text-xs mt-1 text-gray-500 dark:text-gray-500">Comprehensive testing advocate</div>
			</div>
			<div class="p-6 rounded-lg border border-gray-200 dark:border-gray-700">
				<div class="text-2xl font-bold text-orange mb-2">6+</div>
				<div class="text-sm text-gray-600 dark:text-gray-400">Years Experience</div>
				<div class="text-xs mt-1 text-gray-500 dark:text-gray-500">Full-stack & Data Science</div>
			</div>
		</div>
	</div>
</section>