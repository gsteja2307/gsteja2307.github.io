---

---

<section
	data-testid="technical-expertise"
	id="expertise"
	class="mb-10 flex flex-col items-center justify-center lg:mb-0 lg:min-h-screen"
>
	<div class="mb-10 flex w-full flex-col items-center justify-center">
		<h2 class="font-monospace text-2xl text-orange lg:text-4xl">Technical Expertise</h2>
		<span class="mb-6 ml-2 h-1 w-10 bg-orange"></span>
	</div>

	<div class="w-full max-w-6xl">
		<!-- Skills Grid -->
		<div class="mb-12 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
			<!-- Frontend -->
			<div class="rounded-lg border border-gray-200 p-6 text-center dark:border-gray-700">
				<h3 class="mb-4 text-lg font-semibold text-black dark:text-white">Frontend</h3>
				<div class="space-y-2">
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">React.js</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Redux</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">TypeScript</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						React Native
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Micro-frontends
					</div>
				</div>
			</div>

			<!-- Backend -->
			<div class="rounded-lg border border-gray-200 p-6 text-center dark:border-gray-700">
				<h3 class="mb-4 text-lg font-semibold text-black dark:text-white">Backend</h3>
				<div class="space-y-2">
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Node.js</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Express.js</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">RESTful APIs</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Microservices
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Java Spring
					</div>
				</div>
			</div>

			<!-- Database & DevOps -->
			<div class="rounded-lg border border-gray-200 p-6 text-center dark:border-gray-700">
				<h3 class="mb-4 text-lg font-semibold text-black dark:text-white">Database & DevOps</h3>
				<div class="space-y-2">
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">MongoDB</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">MySQL</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Docker</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						CI/CD
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Jenkins
					</div>
				</div>
			</div>

			<!-- Testing & Tools -->
			<div class="rounded-lg border border-gray-200 p-6 text-center dark:border-gray-700">
				<h3 class="mb-4 text-lg font-semibold text-black dark:text-white">Testing & Tools</h3>
				<div class="space-y-2">
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Jest</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">
						React Testing Library
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Webpack
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Git
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Storybook
					</div>
				</div>
			</div>

			<!-- Data Science & AI -->
			<div class="rounded-lg border border-gray-200 p-6 text-center dark:border-gray-700">
				<h3 class="mb-4 text-lg font-semibold text-black dark:text-white">Data Science & AI</h3>
				<div class="space-y-2">
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Python</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">Data Analysis</div>
					<div class="rounded-full bg-orange px-3 py-1 text-sm text-white">MCP</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						AI Exploration
					</div>
					<div
						class="rounded-full bg-gray-200 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300"
					>
						Machine Learning
					</div>
				</div>
			</div>
		</div>

		<!-- Specialized Areas -->
		<div class="mb-12 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
			<div class="rounded-lg bg-orange p-6 text-center text-white">
				<h3 class="mb-3 text-lg font-semibold">Financial Technology</h3>
				<p class="text-sm opacity-90">
					International Payment Modernization, Open Banking v4, PSD2 compliance
				</p>
			</div>
			<div class="rounded-lg bg-orange p-6 text-center text-white">
				<h3 class="mb-3 text-lg font-semibold">Data Science</h3>
				<p class="text-sm opacity-90">
					M.Tech Data Science & Engineering, Data analytics, ML algorithms
				</p>
			</div>
			<div class="rounded-lg bg-orange p-6 text-center text-white">
				<h3 class="mb-3 text-lg font-semibold">AI & MCP</h3>
				<p class="text-sm opacity-90">
					Model Context Protocol exploration, agentic AI systems, emerging technologies
				</p>
			</div>
			<div class="rounded-lg bg-orange p-6 text-center text-white">
				<h3 class="mb-3 text-lg font-semibold">Performance Engineering</h3>
				<p class="text-sm opacity-90">
					Memory caching, lazy loading, code splitting, optimization techniques
				</p>
			</div>
		</div>

		<!-- Experience Level -->
		<div class="text-center">
			<h3 class="mb-6 text-xl font-semibold text-black dark:text-white">Experience Level</h3>
			<div class="flex flex-wrap justify-center gap-6">
				<div class="flex flex-col items-center">
					<div class="mb-2 text-3xl font-bold text-orange">6+</div>
					<div class="text-sm text-gray-600 dark:text-gray-400">Years MERN Stack</div>
				</div>
				<div class="flex flex-col items-center">
					<div class="mb-2 text-3xl font-bold text-orange">80%</div>
					<div class="text-sm text-gray-600 dark:text-gray-400">Test Coverage Standards</div>
				</div>
				<div class="flex flex-col items-center">
					<div class="mb-2 text-3xl font-bold text-orange">45+</div>
					<div class="text-sm text-gray-600 dark:text-gray-400">GitHub Repositories</div>
				</div>
			</div>
		</div>
	</div>
</section>
