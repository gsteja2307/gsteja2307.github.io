---

---

<section
	data-testid="technical-expertise"
	id="expertise"
	class="relative overflow-hidden bg-white py-20 dark:bg-slate-900"
>
	<!-- Background Elements -->
	<div class="absolute inset-0">
		<div
			class="from-blue/5 to-purple/5 absolute left-0 top-0 h-full w-full bg-gradient-to-br via-transparent"
		>
		</div>
		<div class="absolute left-20 top-20 h-96 w-96 rounded-full bg-blue-500/10 blur-3xl"></div>
		<div class="absolute bottom-20 right-20 h-80 w-80 rounded-full bg-purple-500/10 blur-3xl"></div>
	</div>

	<div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<!-- Section Header -->
		<div class="mb-16 text-center">
			<h2 class="mb-6 text-4xl font-bold sm:text-5xl lg:text-6xl">
				<span
					class="bg-gradient-to-r from-slate-900 via-blue-600 to-slate-900 bg-clip-text text-transparent dark:from-white dark:via-blue-400 dark:to-white"
				>
					Technical Expertise
				</span>
			</h2>
			<div class="mx-auto mb-6 h-1 w-24 bg-gradient-to-r from-blue-500 to-purple-600"></div>
			<p class="mx-auto max-w-3xl text-xl text-slate-600 dark:text-slate-400">
				Full-stack mastery with cutting-edge technology exploration
			</p>
		</div>

		<!-- Skills Grid -->
		<div class="mb-20">
			<h3 class="mb-12 text-center text-3xl font-bold text-slate-900 dark:text-white">
				Core Technologies
			</h3>
			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
				<!-- Frontend -->
				<div class="group relative">
					<div
						class="from-orange-500 absolute inset-0 rounded-3xl bg-gradient-to-r to-red-500 opacity-20 blur-xl transition-opacity group-hover:opacity-30"
					>
					</div>
					<div
						class="relative rounded-3xl border border-slate-200 bg-white p-8 shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl dark:border-slate-700 dark:bg-slate-800"
					>
						<div class="mb-6 flex items-center">
							<div
								class="dark:from-orange-500 dark:border-orange-400 mr-4 flex h-12 w-12 items-center justify-center rounded-xl border-2 border-slate-200 bg-gradient-to-r from-slate-800 to-slate-900 shadow-lg dark:to-red-500"
							>
								<svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
									<path
										fill-rule="evenodd"
										d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
										clip-rule="evenodd"></path>
								</svg>
							</div>
							<div>
								<h4 class="text-xl font-bold text-slate-900 dark:text-white">Frontend</h4>
								<p class="text-orange-600 text-sm font-semibold">UI/UX Development</p>
							</div>
						</div>
						<div class="space-y-3">
							<div
								class="bg-orange-50 dark:bg-orange-900/20 flex items-center justify-between rounded-xl p-3"
							>
								<span class="font-semibold text-slate-800 dark:text-slate-200">React.js</span>
								<div class="bg-orange-200 dark:bg-orange-800 h-2 w-16 overflow-hidden rounded-full">
									<div class="bg-orange-500 h-full w-full rounded-full"></div>
								</div>
							</div>
							<div
								class="bg-orange-50 dark:bg-orange-900/20 flex items-center justify-between rounded-xl p-3"
							>
								<span class="font-semibold text-slate-800 dark:text-slate-200">TypeScript</span>
								<div class="bg-orange-200 dark:bg-orange-800 h-2 w-16 overflow-hidden rounded-full">
									<div class="bg-orange-500 h-full w-full rounded-full"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-slate-50 p-3 dark:bg-slate-700"
							>
								<span class="text-slate-700 dark:text-slate-300">Redux</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-600">
									<div class="h-full w-4/5 rounded-full bg-slate-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-slate-50 p-3 dark:bg-slate-700"
							>
								<span class="text-slate-700 dark:text-slate-300">React Native</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-600">
									<div class="h-full w-4/5 rounded-full bg-slate-500"></div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Backend -->
				<div class="group relative">
					<div
						class="absolute inset-0 rounded-3xl bg-gradient-to-r from-green-500 to-emerald-500 opacity-20 blur-xl transition-opacity group-hover:opacity-30"
					>
					</div>
					<div
						class="relative rounded-3xl border border-slate-200 bg-white p-8 shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl dark:border-slate-700 dark:bg-slate-800"
					>
						<div class="mb-6 flex items-center">
							<div
								class="mr-4 flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-r from-green-500 to-emerald-500 shadow-lg"
							>
								<svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
									<path
										fill-rule="evenodd"
										d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z"
										clip-rule="evenodd"></path>
									<path
										d="M15 7h1a2 2 0 012 2v5.5a1.5 1.5 0 01-3 0V9a1 1 0 00-1-1h-1v3a2 2 0 01-2 2H5a2 2 0 01-2-2V9a1 1 0 00-1 1v5.5a1.5 1.5 0 01-3 0V9a2 2 0 012-2h1V6a2 2 0 012-2h8a2 2 0 012 2v1z"
									></path>
								</svg>
							</div>
							<div>
								<h4 class="text-xl font-bold text-slate-900 dark:text-white">Backend</h4>
								<p class="text-sm font-semibold text-green-600">Server Development</p>
							</div>
						</div>
						<div class="space-y-3">
							<div
								class="flex items-center justify-between rounded-xl bg-green-50 p-3 dark:bg-green-900/20"
							>
								<span class="font-semibold text-slate-800 dark:text-slate-200">Node.js</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-green-200 dark:bg-green-800">
									<div class="h-full w-full rounded-full bg-green-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-green-50 p-3 dark:bg-green-900/20"
							>
								<span class="font-semibold text-slate-800 dark:text-slate-200">Express.js</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-green-200 dark:bg-green-800">
									<div class="h-full w-full rounded-full bg-green-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-slate-50 p-3 dark:bg-slate-700"
							>
								<span class="text-slate-700 dark:text-slate-300">RESTful APIs</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-600">
									<div class="h-full w-5/6 rounded-full bg-slate-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-slate-50 p-3 dark:bg-slate-700"
							>
								<span class="text-slate-700 dark:text-slate-300">Microservices</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-600">
									<div class="h-full w-4/5 rounded-full bg-slate-500"></div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Data & AI -->
				<div class="group relative">
					<div
						class="absolute inset-0 rounded-3xl bg-gradient-to-r from-purple-500 to-violet-500 opacity-20 blur-xl transition-opacity group-hover:opacity-30"
					>
					</div>
					<div
						class="relative rounded-3xl border border-slate-200 bg-white p-8 shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl dark:border-slate-700 dark:bg-slate-800"
					>
						<div class="mb-6 flex items-center">
							<div
								class="mr-4 flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-r from-purple-500 to-violet-500 shadow-lg"
							>
								<svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<div>
								<h4 class="text-xl font-bold text-slate-900 dark:text-white">Data & AI</h4>
								<p class="text-sm font-semibold text-purple-600">Intelligence & Analytics</p>
							</div>
						</div>
						<div class="space-y-3">
							<div
								class="flex items-center justify-between rounded-xl bg-purple-50 p-3 dark:bg-purple-900/20"
							>
								<span class="font-semibold text-slate-800 dark:text-slate-200">Python</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-purple-200 dark:bg-purple-800">
									<div class="h-full w-full rounded-full bg-purple-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-purple-50 p-3 dark:bg-purple-900/20"
							>
								<span class="font-semibold text-slate-800 dark:text-slate-200">MCP</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-purple-200 dark:bg-purple-800">
									<div class="h-full w-3/4 rounded-full bg-purple-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-slate-50 p-3 dark:bg-slate-700"
							>
								<span class="text-slate-700 dark:text-slate-300">Data Analysis</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-600">
									<div class="h-full w-5/6 rounded-full bg-slate-500"></div>
								</div>
							</div>
							<div
								class="flex items-center justify-between rounded-xl bg-slate-50 p-3 dark:bg-slate-700"
							>
								<span class="text-slate-700 dark:text-slate-300">Machine Learning</span>
								<div class="h-2 w-16 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-600">
									<div class="h-full w-3/5 rounded-full bg-slate-500"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Specialized Areas -->
		<div class="mb-20">
			<h3 class="mb-12 text-center text-3xl font-bold text-slate-900 dark:text-white">
				Specializations
			</h3>
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
				<div
					class="from-orange-500 to-orange-600 group relative rounded-3xl bg-gradient-to-br p-8 text-white shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
				>
					<div class="mb-4 text-3xl">🏦</div>
					<h4 class="mb-3 text-xl font-bold">FinTech</h4>
					<p class="text-orange-100 text-sm leading-relaxed">
						International Payment Modernization, Open Banking, Retail Banking
					</p>
				</div>

				<div
					class="group relative rounded-3xl bg-gradient-to-br from-blue-500 to-blue-600 p-8 text-white shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
				>
					<div class="mb-4 text-3xl">📊</div>
					<h4 class="mb-3 text-xl font-bold">Data Science</h4>
					<p class="text-sm leading-relaxed text-blue-100">
						M.Tech Data Science & Engineering, Statistical analysis, ML algorithms
					</p>
				</div>

				<div
					class="group relative rounded-3xl bg-gradient-to-br from-purple-500 to-purple-600 p-8 text-white shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
				>
					<div class="mb-4 text-3xl">🤖</div>
					<h4 class="mb-3 text-xl font-bold">AI & MCP</h4>
					<p class="text-sm leading-relaxed text-purple-100">
						Model Context Protocol exploration, agentic AI systems, emerging technologies
					</p>
				</div>

				<div
					class="group relative rounded-3xl bg-gradient-to-br from-green-500 to-green-600 p-8 text-white shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
				>
					<div class="mb-4 text-3xl">⚡</div>
					<h4 class="mb-3 text-xl font-bold">Performance</h4>
					<p class="text-sm leading-relaxed text-green-100">
						Memory caching, lazy loading, code splitting, optimization techniques
					</p>
				</div>
			</div>
		</div>

		<!-- Experience Metrics -->
		<div
			class="rounded-3xl bg-gradient-to-r from-slate-100 to-slate-200 p-12 dark:from-slate-800 dark:to-slate-900"
		>
			<h3 class="mb-12 text-center text-3xl font-bold text-slate-900 dark:text-white">
				Experience Metrics
			</h3>
			<div class="grid gap-8 md:grid-cols-3">
				<div class="group text-center">
					<div class="relative mb-4">
						<div
							class="dark:from-orange-500 dark:to-orange-600 dark:border-orange-400 mx-auto flex h-24 w-24 items-center justify-center rounded-full border-2 border-slate-200 bg-gradient-to-r from-slate-800 to-slate-900 shadow-xl transition-transform group-hover:scale-110"
						>
							<span class="text-3xl font-bold text-white">6+</span>
						</div>
						<div
							class="absolute -right-2 -top-2 flex h-8 w-8 items-center justify-center rounded-full bg-green-500"
						>
							<span class="text-xs font-bold text-white">Y</span>
						</div>
					</div>
					<h4 class="mb-2 text-xl font-bold text-slate-900 dark:text-white">Years MERN Stack</h4>
					<p class="text-sm text-slate-600 dark:text-slate-400">Full-stack development mastery</p>
				</div>

				<div class="group text-center">
					<div class="relative mb-4">
						<div
							class="mx-auto flex h-24 w-24 items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-blue-600 shadow-xl transition-transform group-hover:scale-110"
						>
							<span class="text-3xl font-bold text-white">80%</span>
						</div>
						<div
							class="absolute -right-2 -top-2 flex h-8 w-8 items-center justify-center rounded-full bg-green-500"
						>
							<span class="text-xs font-bold text-white">✓</span>
						</div>
					</div>
					<h4 class="mb-2 text-xl font-bold text-slate-900 dark:text-white">Test Coverage</h4>
					<p class="text-sm text-slate-600 dark:text-slate-400">Quality assurance standards</p>
				</div>

				<div class="group text-center">
					<div class="relative mb-4">
						<div
							class="mx-auto flex h-24 w-24 items-center justify-center rounded-full bg-gradient-to-r from-purple-500 to-purple-600 shadow-xl transition-transform group-hover:scale-110"
						>
							<span class="text-3xl font-bold text-white">45+</span>
						</div>
						<div
							class="absolute -right-2 -top-2 flex h-8 w-8 items-center justify-center rounded-full bg-green-500"
						>
							<span class="text-xs font-bold text-white">★</span>
						</div>
					</div>
					<h4 class="mb-2 text-xl font-bold text-slate-900 dark:text-white">GitHub Repos</h4>
					<p class="text-sm text-slate-600 dark:text-slate-400">Open source contributions</p>
				</div>
			</div>
		</div>
	</div>
</section>
