---
import { siteConfig } from '@/site-config';
import { SOCIALNETWORKS } from '@/data/links';

const today = new Date();
---

<footer
	class="border-t border-gray-200/20 bg-gradient-to-r from-gray-50 to-gray-100 dark:border-gray-800/30 dark:from-gray-900 dark:to-gray-800"
>
	<div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
			<!-- Brand Section -->
			<div class="space-y-4">
				<div class="flex items-center space-x-2">
					<div
						class="flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 text-white shadow-lg"
					>
						<span class="text-sm font-bold">ST</span>
					</div>
					<span class="text-xl font-bold text-gray-900 dark:text-white">Surya Teja</span>
				</div>
				<p class="max-w-md text-sm text-gray-600 dark:text-gray-400">
					Senior Software Engineer at Lloyds Banking Group, specializing in Open Banking APIs and
					payment systems. Building secure, scalable fintech solutions.
				</p>
				<div class="flex space-x-4">
					{
						SOCIALNETWORKS.map((network) => (
							<a
								href={network.url}
								target="_blank"
								rel="noopener noreferrer"
								aria-label={`Follow me on ${network.name}`}
								class="group flex h-10 w-10 items-center justify-center rounded-full bg-white text-gray-600 shadow-md transition-all duration-200 hover:scale-110 hover:bg-blue-500 hover:text-white hover:shadow-lg dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-blue-600"
							>
								<network.icon />
							</a>
						))
					}
				</div>
			</div>

			<!-- Quick Links -->
			<div class="space-y-4">
				<h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900 dark:text-white">
					Quick Links
				</h3>
				<nav class="space-y-2">
					<a
						href="/"
						class="block text-sm text-gray-600 transition-colors duration-200 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
					>
						About Me
					</a>
					<a
						href="/blog"
						class="block text-sm text-gray-600 transition-colors duration-200 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
					>
						Blog Posts
					</a>
					<a
						href="/tags"
						class="block text-sm text-gray-600 transition-colors duration-200 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
					>
						Tags
					</a>
					<a
						href="https://github.com/gsteja2307"
						target="_blank"
						rel="noopener noreferrer"
						class="block text-sm text-gray-600 transition-colors duration-200 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
					>
						Projects
					</a>
				</nav>
			</div>

			<!-- Contact & Skills -->
			<div class="space-y-4">
				<h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900 dark:text-white">
					Expertise
				</h3>
				<div class="space-y-2">
					<div class="flex flex-wrap gap-2">
						<span
							class="rounded-full bg-blue-100 px-3 py-1 text-xs font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-400"
						>
							Node.js
						</span>
						<span
							class="rounded-full bg-blue-100 px-3 py-1 text-xs font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-400"
						>
							React
						</span>
						<span
							class="rounded-full bg-green-100 px-3 py-1 text-xs font-medium text-green-800 dark:bg-green-900/30 dark:text-green-400"
						>
							Open Banking
						</span>
						<span
							class="rounded-full bg-purple-100 px-3 py-1 text-xs font-medium text-purple-800 dark:bg-purple-900/30 dark:text-purple-400"
						>
							PSD2
						</span>
						<span
							class="bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-400 rounded-full px-3 py-1 text-xs font-medium"
						>
							Payment Systems
						</span>
					</div>
				</div>
				<div class="pt-2">
					<p class="text-xs text-gray-500 dark:text-gray-500">üìç Based in Hyderabad</p>
					<p class="text-xs text-gray-500 dark:text-gray-500">üíº Open for opportunities</p>
				</div>
			</div>
		</div>

		<!-- Bottom Bar -->
		<div class="mt-8 border-t border-gray-200/30 pt-8 dark:border-gray-700/50">
			<div class="flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0">
				<div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
					<span>&copy; {today.getFullYear()} {siteConfig.author}. All rights reserved.</span>
				</div>
				<div class="flex items-center space-x-6 text-xs text-gray-500 dark:text-gray-400">
					<span class="flex items-center space-x-1">
						<span>Built with</span>
						<span class="text-orange-500">üöÄ</span>
						<span>Astro</span>
					</span>
					<span class="flex items-center space-x-1">
						<span>Styled with</span>
						<span class="text-blue-500">üí®</span>
						<span>Tailwind CSS</span>
					</span>
					<span class="flex items-center space-x-1">
						<span>Hosted on</span>
						<span class="text-gray-900 dark:text-white">‚ö°</span>
						<span>GitHub Pages</span>
					</span>
				</div>
			</div>
		</div>
	</div>
</footer>
