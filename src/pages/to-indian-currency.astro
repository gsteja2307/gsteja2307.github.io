---
import BaseLayout from '@/layouts/BaseLayout';
import { siteConfig } from '@/data/site.config';
---

<BaseLayout title="Indian Currency Converter Playground | Surya Teja">
	<div class="w-full py-12">
		<!-- Header Section -->
		<div class="mb-12 text-center">
			<h1 class="mb-4 text-4xl font-bold text-slate-900 dark:text-white md:text-5xl">
				ü™ô Indian Currency Converter
			</h1>
			<p class="mx-auto max-w-2xl text-lg text-slate-600 dark:text-slate-400">
				Interactive playground for the
				<a
					href="https://www.npmjs.com/package/to-indian-currency"
					target="_blank"
					rel="noopener noreferrer"
					class="font-semibold text-orange-600 underline decoration-orange-500/30 underline-offset-4 transition-colors hover:text-orange-700 hover:decoration-orange-500 dark:text-orange-400 dark:hover:text-orange-300"
				>
					to-indian-currency
				</a>
				npm package
			</p>
			<div class="mt-4 flex flex-wrap items-center justify-center gap-3">
				<span
					class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-300"
				>
					v1.0.1
				</span>
				<span
					class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800 dark:bg-green-900/30 dark:text-green-300"
				>
					MIT License
				</span>
			</div>
		</div>

		<!-- Playground Section -->
		<div class="w-full space-y-8">
			<!-- Input Section -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-xl dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
			>
				<label
					for="amount-input"
					class="mb-3 block text-lg font-semibold text-slate-900 dark:text-white"
				>
					Enter Amount
				</label>
				<input
					type="number"
					id="amount-input"
					placeholder="Enter a number (e.g., 205030.75)"
					autocomplete="off"
					class="w-full rounded-xl border-2 border-slate-300 bg-white px-6 py-4 text-lg font-medium text-slate-900 transition-all placeholder:text-slate-400 focus:border-orange-500 focus:outline-none focus:ring-4 focus:ring-orange-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-white dark:placeholder:text-slate-500 dark:focus:border-orange-400"
				/>
			</div>

			<!-- Results Section -->
			<div class="grid gap-6 md:grid-cols-2 md:min-h-[250px]">
				<!-- Currency Format Result -->
				<div
					class="flex h-full flex-col rounded-3xl border border-slate-200 bg-gradient-to-br from-blue-50 to-blue-100 p-8 shadow-lg dark:border-blue-800/30 dark:from-blue-900/20 dark:to-blue-800/20"
				>
					<div class="mb-3 flex items-center">
						<div
							class="mr-3 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-blue-500 text-white shadow-md"
						>
							‚Çπ
						</div>
						<h3 class="text-lg font-bold text-slate-900 dark:text-white">Currency Format</h3>
					</div>
					<p class="mb-2 text-sm text-slate-600 dark:text-slate-400">toINR(amount)</p>
					<div
						id="currency-result"
						class="flex min-h-[4rem] flex-1 items-center overflow-x-auto rounded-xl bg-white/80 p-4 text-2xl font-bold text-blue-600 backdrop-blur-sm dark:bg-slate-800/80 dark:text-blue-400"
					>
						‚Çπ2,05,030.75
					</div>
				</div>

				<!-- Words Format Result -->
				<div
					class="flex h-full flex-col rounded-3xl border border-slate-200 bg-gradient-to-br from-green-50 to-green-100 p-8 shadow-lg dark:border-green-800/30 dark:from-green-900/20 dark:to-green-800/20"
				>
					<div class="mb-3 flex items-center">
						<div
							class="mr-3 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-green-500 text-white shadow-md"
						>
							üìù
						</div>
						<h3 class="text-lg font-bold text-slate-900 dark:text-white">Words Format</h3>
					</div>
					<p class="mb-2 text-sm text-slate-600 dark:text-slate-400">toINRWords(amount)</p>
					<div
						id="words-result"
						class="flex min-h-[4rem] flex-1 items-center overflow-x-auto rounded-xl bg-white/80 p-4 leading-relaxed text-green-700 backdrop-blur-sm dark:bg-slate-800/80 dark:text-green-400"
					>
						Two Lakh Five Thousand Thirty Rupees and Seventy-Five Paise
					</div>
				</div>
			</div>

			<!-- Example Buttons -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-orange-50 to-orange-100 p-8 shadow-lg dark:border-orange-800/30 dark:from-orange-900/20 dark:to-orange-800/20"
			>
				<h3 class="mb-4 text-lg font-bold text-slate-900 dark:text-white">Try Examples</h3>
				<div class="flex flex-wrap gap-3">
					<button
						class="example-btn rounded-lg bg-white px-4 py-2 font-semibold text-slate-700 shadow-md transition-all hover:scale-105 hover:bg-orange-500 hover:text-white hover:shadow-lg dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-orange-600"
						data-value="1000"
					>
						‚Çπ1,000
					</button>
					<button
						class="example-btn rounded-lg bg-white px-4 py-2 font-semibold text-slate-700 shadow-md transition-all hover:scale-105 hover:bg-orange-500 hover:text-white hover:shadow-lg dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-orange-600"
						data-value="50000"
					>
						‚Çπ50,000
					</button>
					<button
						class="example-btn rounded-lg bg-white px-4 py-2 font-semibold text-slate-700 shadow-md transition-all hover:scale-105 hover:bg-orange-500 hover:text-white hover:shadow-lg dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-orange-600"
						data-value="100000"
					>
						‚Çπ1 Lakh
					</button>
					<button
						class="example-btn rounded-lg bg-white px-4 py-2 font-semibold text-slate-700 shadow-md transition-all hover:scale-105 hover:bg-orange-500 hover:text-white hover:shadow-lg dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-orange-600"
						data-value="1000000"
					>
						‚Çπ10 Lakhs
					</button>
					<button
						class="example-btn rounded-lg bg-white px-4 py-2 font-semibold text-slate-700 shadow-md transition-all hover:scale-105 hover:bg-orange-500 hover:text-white hover:shadow-lg dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-orange-600"
						data-value="10000000"
					>
						‚Çπ1 Crore
					</button>
					<button
						class="example-btn rounded-lg bg-white px-4 py-2 font-semibold text-slate-700 shadow-md transition-all hover:scale-105 hover:bg-orange-500 hover:text-white hover:shadow-lg dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-orange-600"
						data-value="12345.67"
					>
						‚Çπ12,345.67
					</button>
				</div>
			</div>

			<!-- Features Section -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-purple-50 to-purple-100 p-8 shadow-lg dark:border-purple-800/30 dark:from-purple-900/20 dark:to-purple-800/20"
			>
				<h3 class="mb-4 text-lg font-bold text-slate-900 dark:text-white">‚ú® Features</h3>
				<ul class="space-y-2 text-slate-700 dark:text-slate-300">
					<li class="flex items-start">
						<span class="mr-2 text-purple-500">‚úì</span>
						<span>Converts numbers into Indian Rupee format (‚Çπ10,00,000.00)</span>
					</li>
					<li class="flex items-start">
						<span class="mr-2 text-purple-500">‚úì</span>
						<span>Converts numbers to words in Indian currency format</span>
					</li>
					<li class="flex items-start">
						<span class="mr-2 text-purple-500">‚úì</span>
						<span>Handles paise for decimal numbers (Seventy-Five Paise)</span>
					</li>
					<li class="flex items-start">
						<span class="mr-2 text-purple-500">‚úì</span>
						<span>Supports lakhs and crores notation</span>
					</li>
				</ul>
			</div>

			<!-- Installation & Usage -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-slate-50 to-slate-100 p-8 shadow-lg dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
			>
				<h3 class="mb-4 text-lg font-bold text-slate-900 dark:text-white">üì¶ Installation</h3>
				<div
					class="mb-6 rounded-xl bg-slate-900 p-4 font-mono text-sm text-green-400 dark:bg-black"
				>
					<code>npm install to-indian-currency</code>
				</div>

				<h3 class="mb-4 text-lg font-bold text-slate-900 dark:text-white">üíª Usage</h3>
				<div
					class="rounded-xl bg-slate-900 p-4 font-mono text-sm text-slate-300 dark:bg-black"
				>
					<code class="block">
						<span class="text-purple-400">const</span>
						<span class="text-white">{'{'} toINR, toINRWords {'}'}</span>
						<span class="text-purple-400"> = require</span>
						<span class="text-white">(</span>
						<span class="text-green-400">'to-indian-currency'</span>
						<span class="text-white">);</span>
						<br />
						<br />
						<span class="text-gray-500">// Convert to currency format</span>
						<br />
						<span class="text-blue-400">console</span>
						<span class="text-white">.log(</span>
						<span class="text-yellow-400">toINR</span>
						<span class="text-white">(205030.75));</span>
						<br />
						<span class="text-gray-500">// Output: "‚Çπ2,05,030.75"</span>
						<br />
						<br />
						<span class="text-gray-500">// Convert to words</span>
						<br />
						<span class="text-blue-400">console</span>
						<span class="text-white">.log(</span>
						<span class="text-yellow-400">toINRWords</span>
						<span class="text-white">(205030.75));</span>
						<br />
						<span class="text-gray-500"
							>// Output: "Two Lakh Five Thousand Thirty Rupees and Seventy-Five Paise"</span
						>
					</code>
				</div>
			</div>

			<!-- Links Section -->
			<div class="flex flex-wrap justify-center gap-4">
				<a
					href="https://www.npmjs.com/package/to-indian-currency"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center space-x-2 rounded-xl bg-red-600 px-6 py-3 font-semibold text-white shadow-lg transition-all hover:scale-105 hover:bg-red-700 hover:shadow-xl"
				>
					<span>üì¶</span>
					<span>View on NPM</span>
				</a>
				<a
					href="https://github.com/gsteja2307/to-indian-currency"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center space-x-2 rounded-xl bg-gray-800 px-6 py-3 font-semibold text-white shadow-lg transition-all hover:scale-105 hover:bg-gray-900 hover:shadow-xl dark:bg-gray-700 dark:hover:bg-gray-600"
				>
					<span>‚≠ê</span>
					<span>View on GitHub</span>
				</a>
			</div>
		</div>
	</div>

	<script>
		// Import the package functions (we'll need to install the package first)
		import { toINR, toINRWords } from 'to-indian-currency';

		// Get DOM elements
		const input = document.getElementById('amount-input') as HTMLInputElement;
		const currencyResult = document.getElementById('currency-result');
		const wordsResult = document.getElementById('words-result');
		const exampleButtons = document.querySelectorAll('.example-btn');

		// Function to update results
		function updateResults() {
			const value = parseFloat(input.value) || 0;

			try {
				// Update currency format
				if (currencyResult) {
					currencyResult.textContent = toINR(value);
				}

				// Update words format
				if (wordsResult) {
					wordsResult.textContent = toINRWords(value);
				}
			} catch (error) {
				console.error('Error converting currency:', error);
				if (currencyResult) currencyResult.textContent = 'Error';
				if (wordsResult) wordsResult.textContent = 'Error converting amount';
			}
		}

		// Function to reset to default value
		function resetToDefault() {
			if (input) {
				input.value = '205030.75';
				updateResults();
			}
		}

		// Reset on page load (DOMContentLoaded)
		resetToDefault();

		// Reset when page becomes visible (handles back button navigation)
		document.addEventListener('visibilitychange', () => {
			if (!document.hidden) {
				resetToDefault();
			}
		});

		// Reset on pageshow event (handles bfcache - back/forward cache)
		window.addEventListener('pageshow', (event) => {
			if (event.persisted) {
				resetToDefault();
			}
		});

		// Event listeners
		input?.addEventListener('input', updateResults);

		exampleButtons.forEach((button) => {
			button.addEventListener('click', (e) => {
				const target = e.currentTarget as HTMLButtonElement;
				const value = target.dataset.value || '0';
				input.value = value;
				updateResults();
			});
		});
	</script>
</BaseLayout>
