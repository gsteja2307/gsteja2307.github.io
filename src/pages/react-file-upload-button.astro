---
import BaseLayout from '@/layouts/BaseLayout';
import FileUploadPlayground from '../components/FileUploadPlayground';

const title = 'React File Upload Button Playground';
const description =
	'Interactive playground for the react-file-upload-button npm package. Test drag-and-drop file uploads with customizable restrictions, progress bars, and preview options.';
---

<BaseLayout title={title} description={description}>
	<div class="mx-auto max-w-7xl px-4 py-12">
		<!-- Header -->
		<div class="mb-12 text-center">
			<h1
				class="mb-4 bg-gradient-to-r from-orange-500 to-pink-500 bg-clip-text text-5xl font-bold text-transparent"
			>
				React File Upload Button
			</h1>
			<p class="mx-auto mb-6 max-w-2xl text-lg text-slate-600 dark:text-slate-400">
				A modern, customizable React file upload component with drag-and-drop support,
				progress tracking, and file validation.
			</p>

			<!-- Package Links -->
			<div class="flex flex-wrap items-center justify-center gap-4">
				<a
					href="https://www.npmjs.com/package/react-file-upload-button"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-xl bg-red-500 px-6 py-3 font-semibold text-white shadow-lg transition-all hover:bg-red-600 hover:shadow-xl"
				>
					<svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
						<path
							d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z"
						></path>
					</svg>
					NPM Package
				</a>

				<a
					href="https://github.com/Sridhar-C-25/react-file-upload-button"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-xl bg-slate-800 px-6 py-3 font-semibold text-white shadow-lg transition-all hover:bg-slate-900 hover:shadow-xl dark:bg-slate-700 dark:hover:bg-slate-600"
				>
					<svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
					GitHub Repo
				</a>

				<div
					class="inline-flex items-center gap-2 rounded-xl bg-slate-100 px-6 py-3 font-mono text-sm font-semibold text-slate-700 dark:bg-slate-800 dark:text-slate-300"
				>
					<span class="text-slate-500 dark:text-slate-400">v</span>1.0.7
				</div>
			</div>
		</div>

		<!-- Installation -->
		<div
			class="mb-12 rounded-3xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-xl dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
		>
			<h2 class="mb-4 text-2xl font-bold text-slate-900 dark:text-white">
				Installation
			</h2>
			<div
				class="overflow-x-auto rounded-xl bg-slate-900 p-4 font-mono text-sm text-slate-100"
			>
				<code>npm install react-file-upload-button</code>
			</div>
		</div>

		<!-- Interactive Playground -->
		<FileUploadPlayground client:load />

		<!-- Usage Examples -->
		<div class="mt-12 space-y-8">
			<!-- Basic Usage -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-xl dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
			>
				<h2 class="mb-4 text-2xl font-bold text-slate-900 dark:text-white">
					Basic Usage
				</h2>
				<pre
					class="overflow-x-auto rounded-xl bg-slate-900 p-6 text-sm leading-relaxed text-slate-100"><code
						>{`import UploadButton from 'react-file-upload-button';

function App() {
  const handleFileUpload = (file) => {
    console.log('File uploaded:', file);
  };

  const handleError = (error) => {
    console.error('Upload error:', error);
  };

  return (
    <UploadButton
      onFileUpload={handleFileUpload}
      onError={handleError}
    />
  );
}`}</code
					></pre>
			</div>

			<!-- Advanced Example -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-xl dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
			>
				<h2 class="mb-4 text-2xl font-bold text-slate-900 dark:text-white">
					Advanced Configuration
				</h2>
				<pre
					class="overflow-x-auto rounded-xl bg-slate-900 p-6 text-sm leading-relaxed text-slate-100"><code
						>{`<UploadButton
  maxSizeMB={10}
  restrictFileSize={true}
  allowedFileTypes={['.pdf', '.jpg', '.png']}
  onFileUpload={handleFileUpload}
  onError={handleError}
  progressBarInterval={100}
  showPreview={true}
  showFileIcon={true}
  uploadText="Drag & Drop or Click"
  subText="Max size: 10MB"
/>`}</code
					></pre>
			</div>

			<!-- Props Table -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-xl dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
			>
				<h2 class="mb-6 text-2xl font-bold text-slate-900 dark:text-white">
					Available Props
				</h2>
				<div class="overflow-x-auto">
					<table class="w-full text-left">
						<thead>
							<tr
								class="border-b-2 border-slate-300 dark:border-slate-600"
							>
								<th
									class="pb-3 pr-6 font-semibold text-slate-900 dark:text-white"
									>Prop</th
								>
								<th
									class="pb-3 pr-6 font-semibold text-slate-900 dark:text-white"
									>Type</th
								>
								<th
									class="pb-3 pr-6 font-semibold text-slate-900 dark:text-white"
									>Default</th
								>
								<th
									class="pb-3 font-semibold text-slate-900 dark:text-white"
									>Description</th
								>
							</tr>
						</thead>
						<tbody class="text-sm text-slate-600 dark:text-slate-400">
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">maxSizeMB</td>
								<td class="py-3 pr-6">number</td>
								<td class="py-3 pr-6">10</td>
								<td class="py-3">Maximum file size in megabytes</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">restrictFileSize</td>
								<td class="py-3 pr-6">boolean</td>
								<td class="py-3 pr-6">false</td>
								<td class="py-3">Enforce file size restriction</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">allowedFileTypes</td>
								<td class="py-3 pr-6">string[]</td>
								<td class="py-3 pr-6">undefined</td>
								<td class="py-3">Array of allowed file extensions</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">onFileUpload</td>
								<td class="py-3 pr-6">function</td>
								<td class="py-3 pr-6">required</td>
								<td class="py-3">Callback when file is uploaded</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">onError</td>
								<td class="py-3 pr-6">function</td>
								<td class="py-3 pr-6">required</td>
								<td class="py-3">Callback for error handling</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">progressBarInterval</td>
								<td class="py-3 pr-6">number</td>
								<td class="py-3 pr-6">100</td>
								<td class="py-3">Progress bar update interval (ms)</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">showPreview</td>
								<td class="py-3 pr-6">boolean</td>
								<td class="py-3 pr-6">false</td>
								<td class="py-3">Show file preview after upload</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">showFileIcon</td>
								<td class="py-3 pr-6">boolean</td>
								<td class="py-3 pr-6">true</td>
								<td class="py-3">Show file icon in upload area</td>
							</tr>
							<tr class="border-b border-slate-200 dark:border-slate-700">
								<td class="py-3 pr-6 font-mono">uploadText</td>
								<td class="py-3 pr-6">string | JSX</td>
								<td class="py-3 pr-6">-</td>
								<td class="py-3">Custom upload text</td>
							</tr>
							<tr>
								<td class="py-3 pr-6 font-mono">subText</td>
								<td class="py-3 pr-6">string | JSX</td>
								<td class="py-3 pr-6">-</td>
								<td class="py-3">Custom subtitle text</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>

			<!-- Features List -->
			<div
				class="rounded-3xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-xl dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
			>
				<h2 class="mb-6 text-2xl font-bold text-slate-900 dark:text-white">
					Key Features
				</h2>
				<div class="grid gap-4 md:grid-cols-2">
					<div
						class="flex items-start gap-3 rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800"
					>
						<span class="text-2xl">‚ú®</span>
						<div>
							<h3
								class="mb-1 font-semibold text-slate-900 dark:text-white"
							>
								Drag and Drop
							</h3>
							<p class="text-sm text-slate-600 dark:text-slate-400">
								Intuitive drag-and-drop interface with click-to-browse
								fallback
							</p>
						</div>
					</div>

					<div
						class="flex items-start gap-3 rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800"
					>
						<span class="text-2xl">üìä</span>
						<div>
							<h3
								class="mb-1 font-semibold text-slate-900 dark:text-white"
							>
								Progress Tracking
							</h3>
							<p class="text-sm text-slate-600 dark:text-slate-400">
								Visual progress bar with customizable update intervals
							</p>
						</div>
					</div>

					<div
						class="flex items-start gap-3 rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800"
					>
						<span class="text-2xl">üîí</span>
						<div>
							<h3
								class="mb-1 font-semibold text-slate-900 dark:text-white"
							>
								File Validation
							</h3>
							<p class="text-sm text-slate-600 dark:text-slate-400">
								Restrict file types and sizes with automatic validation
							</p>
						</div>
					</div>

					<div
						class="flex items-start gap-3 rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800"
					>
						<span class="text-2xl">üé®</span>
						<div>
							<h3
								class="mb-1 font-semibold text-slate-900 dark:text-white"
							>
								Customizable
							</h3>
							<p class="text-sm text-slate-600 dark:text-slate-400">
								Fully customizable text, icons, and styling options
							</p>
						</div>
					</div>

					<div
						class="flex items-start gap-3 rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800"
					>
						<span class="text-2xl">üëÅÔ∏è</span>
						<div>
							<h3
								class="mb-1 font-semibold text-slate-900 dark:text-white"
							>
								File Preview
							</h3>
							<p class="text-sm text-slate-600 dark:text-slate-400">
								Optional preview of uploaded files with detailed
								information
							</p>
						</div>
					</div>

					<div
						class="flex items-start gap-3 rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800"
					>
						<span class="text-2xl">‚ö°</span>
						<div>
							<h3
								class="mb-1 font-semibold text-slate-900 dark:text-white"
							>
								Error Handling
							</h3>
							<p class="text-sm text-slate-600 dark:text-slate-400">
								Comprehensive error handling with custom callbacks
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer -->
		<div class="mt-12 text-center text-sm text-slate-500 dark:text-slate-400">
			<p>
				Built with ‚ù§Ô∏è by <a
					href="https://github.com/Sridhar-C-25"
					target="_blank"
					rel="noopener noreferrer"
					class="text-orange-500 hover:underline">Sridhar-C-25</a
				>
			</p>
		</div>
	</div>
</BaseLayout>
